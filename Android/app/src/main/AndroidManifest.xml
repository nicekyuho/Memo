<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nice295.memo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nice295.memo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nice295.memo.NewMemo"
        android:label="@string/title_activity_new_memo"
        android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name="com.nice295.memo.NewRecordActivity"
        android:label="@string/title_activity_new_record"
        android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>